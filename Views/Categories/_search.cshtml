@model IEnumerable<mvcdemo.Models.ef.Category>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Code  
            </td>
            <td>
                @item.Description  
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Code }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Code },
                                new { onclick = "return confirm('Do you want to delete category?')" })
            </td>
        </tr>
    }
    
    </table>
}
else
{
    <h3>Sorry! No categories found!</h3>
}

